{
  "name": "hel",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "fantasticsoul",
  "main": "index.js",
  "scripts": {
    "build": "npm run build_proxy && npm run build_core",
    "build_proxy": "pnpm --filter=hel-lib-proxy run build",
    "build_core": "pnpm --filter=hel-micro-core run build",
    "format": "prettier --cache --write . '!./pnpm-lock.yaml' --ignore-path .gitignore --ignore-unknown"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --cache --write"
    ],
    "*.ts?(x)": [
      "prettier --cache --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@types/react": ">=16",
    "@types/react-dom": ">=16",
    "hel-lib-proxy": "workspace:^3.9.3",
    "hel-micro": "workspace:^3.9.2",
    "hel-micro-core": "workspace:^3.9.2",
    "hel-types": "workspace:^3.7.0",
    "react": ">=16",
    "react-dom": ">=16",
    "shadow-view-react": "workspace:^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@typescript-eslint/parser": "^5.38.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.24.0",
    "fs-extra": "^10.1.0",
    "jest": "^28.1.3",
    "jsdom": "^20.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "npm:@btmills/prettier@^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "prettier-plugin-packagejson": "^2.2.18",
    "resolve": "^1.22.1",
    "ts-jest": "^28.0.1",
    "tslib": "^1.14.1",
    "turbo": "^1.5.3",
    "typescript": "^4.8.4"
  }
}
